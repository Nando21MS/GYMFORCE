@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>IniciarSesion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body, html {
            height: 100%;
            margin: 0;
            background: url('@Url.Content("~/img/FONDOS/principal.png")') no-repeat center center fixed;
            background-size: 70% 100%;
        }

        .form-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
            padding: 15px;
        }

        .card {
            background: rgba(255, 255, 255, 0.8); /* Fondo blanco con opacidad */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            max-width: 400px; /* Limitar el ancho del formulario */
            width: 100%;
        }
    </style>
</head>
<body>

    <div class="form-container">
        <div class="card">
            <div class="card-header text-center">
                Iniciar Sesion
            </div>
            <div class="card-body">

                <form asp-controller="Inicio" asp-action="IniciarSesion" method="post">
                    <input class="form-control mb-3" type="text" placeholder="Correo" required name="correo" />
                    <input class="form-control mb-3" type="password" placeholder="Contraseña" required name="clave" />
                    <div class="d-grid gap-2 mb-3">
                        <button class="btn btn-primary" type="submit">Iniciar Sesion</button>
                    </div>
                    @if (ViewData["Mensaje"] != null)
                    {
                        <div class="form-group">
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Mensaje"]
                            </div>
                        </div>
                    }
                    <div class="text-center">
                        ¿No tienes una cuenta? <a href="@Url.Action("Registrarse","Inicio")"> ¡Regístrate!</a>
                    </div>
                </form>

            </div>

        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
