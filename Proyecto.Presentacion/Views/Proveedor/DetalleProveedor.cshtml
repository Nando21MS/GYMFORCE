@model Proyecto.Presentacion.Models.Proveedor

@{
    ViewData["Title"] = "DetalleProveedor";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<style>
    .detalle-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
        border: 1px solid #ddd;
        border-radius: 0.5rem;
        background-color: #f8f9fa;
    }

    .detalle-image {
        width: 100%;
        max-width: 300px;
        height: auto;
        border-radius: 0.5rem;
        overflow: hidden;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .detalle-image img {
            width: 100%;
            height: auto;
            object-fit: cover;
        }

    .detalle-info {
        text-align: left;
        width: 100%;
    }

        .detalle-info h2 {
            margin-top: 0;
        }

        .detalle-info p {
            margin: 0.5rem 0;
        }

    .volver-link {
        display: block;
        margin-top: 1rem;
        text-align: center;
        color: #007bff;
    }

        .volver-link:hover {
            text-decoration: underline;
        }

    .buscar-productos-btn {
        margin-top: 1.5rem; /* Espacio adicional sobre el botón */
        text-align: center;
    }
</style>

<h1 class="text-center">Detalle del Proveedor</h1>

<div class="detalle-container">
    <div class="detalle-image">
        <img src="~/img/@Url.Content(Model.foto_prov)" alt="Foto del proveedor" />
    </div>
    <div class="detalle-info">
        <h2>@Model.raz_soc</h2>
        <p><strong>RUC:</strong> @Model.ruc</p>
        <p><strong>Teléfono:</strong> @Model.telefono</p>
        <p><strong>Correo:</strong> @Model.correo</p>
        <p><strong>Dirección:</strong> @Model.direccion</p>
    </div>
    <div class="buscar-productos-btn">
        <a href="@Url.Action("listadoProductoPorProveedor", "Producto", new { proveedorId = Model.id_proveedor })" class="btn btn-primary">
            <i class="fas fa-search"></i> Buscar Productos
        </a>
        <a href="@Url.Action("nuevoProducto", "Producto", new { id_proveedor = Model.id_proveedor })" class="btn btn-success">
            <i class="fas fa-plus"></i> Agregar Producto
        </a>
    </div>
</div>

<a href="@Url.Action("listadoProveedor", "Proveedor")" class="volver-link">Volver al listado de proveedores</a>
